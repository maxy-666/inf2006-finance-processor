<body data-theme="dark">
  <div class="container">

    <div class="header">
      <h1>AWS Textract — OCR Viewer</h1>
      <button id="themeToggle">Light Mode</button>
    </div>

    <div class="card">
      <p class="muted">Upload an image (PNG/JPG). PDFs are accepted but require asynchronous processing not included in this demo.</p>

      <form id="uploadForm">
        <input type="file" id="fileInput" accept="image/*,application/pdf" required />
        <button type="submit">Upload & Extract</button>
        <span id="loader" class="muted" style="display:none;">Processing…</span>
      </form>

      <img id="preview" />

      <div id="result"></div>
    </div>

    <hr />
    <p class="muted">Copyright INF2006 AY2025 Trimester 1 Group 12</p>
  </div>

  <script>
    const API_ENDPOINT = 'https://inf2006-proxy-server.onrender.com/api/generate-upload-url';

    const form = document.getElementById('uploadForm');
    const fileInput = document.getElementById('fileInput');
    const preview = document.getElementById('preview');
    const resultDiv = document.getElementById('result');
    const loader = document.getElementById('loader');
    const themeToggle = document.getElementById('themeToggle');
    const body = document.body;

    themeToggle.addEventListener('click', () => {
      const current = body.getAttribute('data-theme');
      const next = current === 'light' ? 'dark' : 'light';
      body.setAttribute('data-theme', next);
      themeToggle.textContent = next === 'light' ? 'Dark Mode' : 'Light Mode';
    });

    fileInput.addEventListener('change', (e) => {
      const f = e.target.files[0];
      if (!f) return;

      if (f.type.startsWith('image/')) {
        preview.src = URL.createObjectURL(f);
        preview.style.display = 'block';
      } else {
        preview.style.display = 'none';
      }
    });

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const file = fileInput.files[0];
      if (!file) return alert('Choose a file first');

      loader.style.display = 'inline';
      resultDiv.innerHTML = '<pre>1. Requesting upload link from server...</pre>';

      try {
        const contentType = encodeURIComponent(file.type);
        const getUrlResponse = await fetch(`${API_ENDPOINT}?contentType=${contentType}`);

        if (!getUrlResponse.ok) {
          const msg = await getUrlResponse.text();
          throw new Error(`Upload URL failed. Status: ${getUrlResponse.status}. ${msg}`);
        }

        const { uploadURL } = await getUrlResponse.json();
        resultDiv.innerHTML += '<pre>2. Upload link received. Uploading to S3...</pre>';

        const uploadResponse = await fetch(uploadURL, {
          method: 'PUT',
          body: file,
          headers: { 'Content-Type': file.type }
        });

        if (!uploadResponse.ok) throw new Error('Upload failure.');

        loader.style.display = 'none';
        resultDiv.innerHTML += '<pre style="color:green;font-weight:bold;">3. Upload complete! Processing triggered.</pre>';

      } catch (err) {
        loader.style.display = 'none';
        resultDiv.innerHTML = `<pre style="color:red;">Error: ${err.message}</pre>`;
      }
    });
  </script>
</body>
</html>
